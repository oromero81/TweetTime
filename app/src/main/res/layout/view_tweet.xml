<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_iv"
            android:layout_width="@dimen/tweet_view_image_size"
            android:layout_height="@dimen/tweet_view_image_size"
            android:layout_marginRight="@dimen/margin_padding_S"
            android:layout_marginTop="@dimen/margin_padding_S"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_M"
                    android:textStyle="bold"
                    tools:text="Oscar Romero" />

                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_padding_S"
                    android:textSize="@dimen/textsize_M"
                    tools:text="(@ORomero81)" />
            </LinearLayout>

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_XS"
                android:layout_marginTop="@dimen/margin_padding_XS"
                android:textSize="@dimen/textsize_S"
                tools:text="23 abril 2012 10:42" />

            <TextView
                android:id="@+id/retweets_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_S"
                tools:text="8 retweets" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="it's 10:42 and my children just born"
        android:layout_marginTop="@dimen/margin_padding_M"/>
</merge>